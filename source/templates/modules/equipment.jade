ul.equipment_list
    each equipment, index in equipments
        li.equipment_list-element.device
            .device_tmb
                img.device_image(src="/images/equipments/#{equipment.img}", alt="#{equipment.name} #{equipment.desc}")
            .device_title #{equipment.name} 
            if equipment.desc !== ""
                .device_subtitle #{equipment.desc}
            if equipment.subtype !== undefined
                ul.device_subtype
                    each subtype, subtypeIndex in equipment.subtype
                        li.device_subtype-element #{subtype.name}
